<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:background="#0099cc"
    tools:context="com.vaidoos.guitorio.a11suicidesquadwallpapers.NineFullscreenActivity">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->
    <ImageView
        android:id="@+id/fullscreen_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:keepScreenOn="true"
        android:background="@drawable/nine"
        android:scaleType="centerCrop"/>

    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center|center_horizontal"
            android:weightSum="1">

            <ImageView
                android:id="@+id/btnNinePrevious"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="24dp"
                android:src="@drawable/ic_chevron_left_black_24dp"
                android:background="@drawable/circle_background"/>

            <Button
                android:layout_width="0dp"
                style="?metaButtonBarButtonStyle"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="invisible"/>

            <ImageView
                android:id="@+id/btnNineNext"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:layout_marginRight="24dp"
                android:src="@drawable/ic_chevron_right_black_24dp"
                android:background="@drawable/circle_background"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/fullscreen_content_controls"
            style="?metaButtonBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:background="@color/black_overlay"
            android:orientation="vertical"
            tools:ignore="UselessParent">

            <!--<Button
                android:id="@+id/btnNinePrevious"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_chevron_left_black_24dp"/>
-->
            <Button
                android:id="@+id/btnNine"
                style="?metaButtonBarButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Set As Wallpaper"
                android:textColor="@android:color/white"/>

            <!--<Button
                android:id="@+id/btnNineNext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_chevron_right_black_24dp"/>
-->
            <com.google.android.gms.ads.AdView
                android:id="@+id/adViewNine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                ads:adSize="SMART_BANNER"
                ads:adUnitId="ca-app-pub-5608607730294297/1413901753">

            </com.google.android.gms.ads.AdView>

        </LinearLayout>

        <ImageView
            android:id="@+id/btnNineShare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_share_black_24dp"
            android:background="@drawable/circle_background_two"/>


    </FrameLayout>

</FrameLayout>
